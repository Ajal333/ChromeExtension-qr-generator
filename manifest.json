{
    "manifest_version": 2,
    "name": "QR-Generator",
    "description": "QR code generator for web pages",
    "version": "1.0.0",
    "icons": {"128" : "icon.png"},
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts":[
        {
          "matches":[
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
      ],
      "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": ["activeTab", "storage"]
}